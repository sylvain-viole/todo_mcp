{
    "compilerOptions": {
      "target": "ES2022",
      "module": "Node16",
      "moduleResolution": "Node16",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@myhelper/*": ["packages/myhelper/*"] // This mapping is relative to "baseUrl".
      },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}